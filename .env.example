# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4

# File Upload Settings
MAX_CONTENT_LENGTH=500000000  # 500MB in bytes

# Quantum Simulation Limits
MAX_QUBITS=20
MAX_PAULI_TERMS=1000
DEFAULT_TROTTER_STEPS=10
COMPUTATION_TIMEOUT=3600

# Performance Settings
USE_GPU=false
MAX_PARALLEL_JOBS=4

# Redis Configuration (for task queue)
REDIS_URL=redis://localhost:6379

# Database Configuration (optional)
DATABASE_URL=sqlite:///qfea.db

# Logging
LOG_LEVEL=INFO

# Security (Production only)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# External APIs (if needed)
# QUANTUM_CLOUD_API_KEY=your-api-key-here
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret

# Development Settings
FLASK_APP=run.py